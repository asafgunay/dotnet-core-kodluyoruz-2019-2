@model DotNetCoreIdentity.Web.ViewModels.Manage.AssignRoleViewModel

@{
    ViewData["Title"] = "AssignRole";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>AssignRole</h1>

<h4>AssignRoleViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" asp-items="Model.RoleList" class="form-control"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <input asp-for="UserId" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
