@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Giris olmak için formu doldurun.</h1>
<div class="container-fluid">
    <form asp-action="Login" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RememberMe" class="form-check-label"></label>
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" />
            </div>
            <span asp-validation-for="RememberMe" class="text-danger"></span>
        </div>
        <input type="hidden" name="returnUrl" id="returnUrl" value="@ViewBag.ReturnUrl" />
        <div class="form-group">
            <input type="submit" value="Giriş" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



